<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/frag_tv_sub"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="fragment 跳转交互传值"
        android:textColor="@color/col_ffffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/frag_tv_sub2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="fragment 返回交互传值"
        android:textColor="@color/col_ffffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/frag_tv_sub3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:textSize="17sp" />

</LinearLayout>
