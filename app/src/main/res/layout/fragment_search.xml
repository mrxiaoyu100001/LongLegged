<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_ffffff"
    android:orientation="vertical">

    <com.org.appfragme.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerType="searchView"
        titlebar:leftType="none"
        titlebar:titleBarColor="@color/col_A973FB"
        titlebar:rightText="取消"
        titlebar:rightType="textView"
        titlebar:rightTextColor="@color/col_ffffff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="输入内容"
        android:padding="8dp"
        android:textSize="13sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/frag_tv_sub"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/col_ffffff"
        android:textSize="17sp" />

</LinearLayout>
